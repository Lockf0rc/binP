#1.1 MODEL
#1.2 VIEW
#1.3 CONTROLLER

abstract class MODEL{
  #OBJECT DATA
  public $DTD; #ARRAY  
  }
abstract class VIEW {
  #VIEW METHODS
  private $HTML; #IO
  private $JSON;
  private $RAW;
  
  public function out($case){ 
    switch(strtoupper ( $case)){
        case 'HTML':
        return $this->HTML;
        case 'JSON':
        return $this->JSON;
        case 'RAW':
          return $this->RAW;
        }
}
abstract class CONTROLLER{
  #CONTROLL VIEW
  $VIEW; #VIEW
  public function render(){
    
  }
  
}
